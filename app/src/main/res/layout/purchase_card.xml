<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/purchase_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="5.5dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#001829"
        android:padding="10dp">

        <ImageView
            android:id="@+id/purchase_photo"
            android:layout_width="wrap_content"
            android:layout_height="125dp"
            android:src="@drawable/images" />

        <TextView
            android:id="@+id/purchase_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="135dp"
            android:paddingTop="10dp"
            android:textColor="#ffffff"
            android:textSize="22sp"
            tools:text="RENT / LEASE" />

        <TextView
            android:id="@+id/purchase_decription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/purchase_title"
            android:layout_marginLeft="10dp"
            android:maxLines="3"
            android:minLines="1"
            android:paddingTop="10dp"
            android:textColor="#ffffff"
            android:textSize="18sp"
            tools:text="I have this house for rent" />

        <TextView
            android:id="@+id/purchase_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/purchase_decription"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="18sp"
            tools:text="Contact : 9876543210" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
